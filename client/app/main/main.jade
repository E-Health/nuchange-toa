.container
  .row
    .col-lg-12
      h1.page-header Patients:
      //-ul.nav.nav-tabs.nav-stacked
        
      div.panel.panel-default.col-md-4.col-lg-4.col-sm-6(ng-repeat='thing in awesomeThings')
          div.panel-heading
            div.pull-right 
              h4 {{thing.name}} ({{thing.identifier}})
              h5 DOB: {{thing.dob | limitTo:10 }} 
              h5 TOA: {{thing.datet | limitTo:10 }}
              h5 MRP: {{thing.mrp}}
              h5 NURSE: {{thing.nurse}}
            div.panel-body  
              img.img-circle.pull-left.col-lg-3.img-responsive(src="assets/images/{{thing.avtar}}" alt="Avtar")  
            div.clearfix
            hr          
            b STORY: 
            | {{thing.story}}
            hr
            b ASSESSMENT: 
            | {{thing.assessment}}
            hr
            b FOLLOW UP: 
            | {{thing.followup}}
            hr
            b EVALUATION: 
            | {{thing.evaluation}}
            hr
            a.edit(ng-click='editThing(thing)')
              span.glyphicon.glyphicon-edit.pull-left
            a.trash(ng-click='deleteThing(thing)')
              span.glyphicon.glyphicon-trash.pull-right


                      
